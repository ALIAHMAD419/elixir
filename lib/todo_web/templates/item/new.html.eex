<%= form_for @item_changeset, Routes.list_item_path(@conn, :create, @list), fn f -> %>
  <%= label f, :content, class: "control-label" %>
  <%= text_input f, :content, class: "form-control", required: true  %>
  <%= error_tag f, :content %>

  <%= label f, :completed %>
  <%= checkbox f, :completed %>
  <%= error_tag f, :completed %>

  <%= submit "Submit", class: "btn btn-primary" %>
<% end %>